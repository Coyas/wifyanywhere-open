<section id="booking" class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4 font-weight-bold">BOOKING</h1>
        </div>
    </div>

    <!--    seccao para o steppers-->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="wrapper-progressBar">
                <ul class="progressBar">
                    <li class="active">ORDER</li>
                    <li class="active">BILING INFORMATION</li>
                    <li>CONFIRME & CHECKOUT</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- codigos do formulario -->
    <div class="row">
        <div id="form-1" class="col-md-9">
            <form action="" method="POST">
                <!-- step orders -->
                <div id="step1"  class="tab">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputNumber">Select the number of days for wifi</label>
                            <select id="inputNumber" class="form-control">
                                <option selected>Select</option>
                                <option>5 dias</option>
                                <option>10 dias</option>
                                <option>20 dias</option>
                                <option>30 dias</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPickupdate">Pick-up date</label>
                            <input type="date" class="form-control" id="inputPickupdate" placeholder="dd/mm/yyyy">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputLocation">confirm pick-up location</label>
                            <select id="inputLocation" class="form-control">
                                <option selected>Select</option>
                                <option>Aeroporto Nelson Mandela (praia)</option>
                                <option>TerraSystem (Latata)</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputreturnlocation">Confirm return location</label>
                            <select id="inputNumber" class="form-control">
                                <option selected>Select</option>
                                <option>5 dias</option>
                                <option>10 dias</option>
                                <option>20 dias</option>
                                <option>30 dias</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputFlightnumber">Flight Number (optional)</label>
                            <input type="number" class="form-control" id="inputFlightnumber" placeholder="">
                        </div>
                    </div>
                    <div class="form-group">
                        <a href="#" class="btn btn-danger" id="next-1">NEXT</a>
                    </div>
                </div>

                <!-- step biling information -->
                <div id="step2" class="tab">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="inputTitle">Title</label>
                            <select id="inputTitle" class="form-control">
                                <option selected>Mr.</option>
                                <option>Ms.</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">First Name</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Last Name</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Street Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">city</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputZip">Zip code</label>
                            <input type="text" class="form-control" id="inputZip" placeholder="">
                        </div>

                        <div class="form-group col-md-6">
                            <label for="inputPhone">Phone</label>
                            <input type="text" class="form-control" id="inputPhone" placeholder="">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCountry">Country</label>
                            <select id="inputCountry" class="form-control">
                                <option selected>EUA</option>
                                <option>Portugal</option>
                                <option>França</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="inputEmail">Email</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="">
                        </div>
                    </div>

                    <div class="form-group">
                        <a href="#" class="btn btn-danger" id="prev-2">BACK</a>
                        <a href="#" class="btn btn-danger" id="next-2">NEXT</a>
                    </div>
                </div>

                <!-- step confirm & CHECKOUT -->
                <div id="step3" class="tab">
                    <div class="checkout">
                        <div class="row">
                            <div class="col-md-12 planname">
                                <h1>PLAN NAME</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">Duration: 00 days</div>
                            <div class="col-md-3">Ending: dd/mm/yyyy</div>
                            <div class="col-md-3">Starting: dd/mm/yyyy</div>
                            <div class="col-md-3"><b>0000$</b></div>
                        </div>
                    </div>
                    <div class="terms">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="font-weight-bold">Terms and Conditions</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="inputTerms">
                                    <label class="form-check-label" for="inputTerms">
                                        I agry to the <a class="linkTerms" href="#">terms and conditions</a>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h1 class="display-4 font-weight-bold">TOTAL: 000$</h1>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <a href="#" class="btn btn-danger" id="prev-3">BACK</a>
<!--                        <a href="#" class="btn btn-success" id="submit">PROCCED TO PAYMENT</a>-->
                        <!-- id=submi => id=next3 -->
                         <input type="submit" name="submit" value="PROCCED TO PAYMENT" id="submit" class="btn btn-success">
                    </div>
                </div>
            </form>


        </div>

        <div id="form-2" class="col-md-9">
            <form action="" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-7">
                        <label for="inputCardnumber">Card Number</label>
                        <input type="number" class="form-control" id="inputCardnumber" placeholder="">
                    </div>

                    <div class="col-md-2 visa">
                        <img src="/images/mastercard.svg" width="40" height="40">
                        <img src="/images/visa.svg" width="40" height="40">
                    </div>

                    <div class="form-group col-md-3">
                        <label for="inputCardexpiry">card Expiry Date</label>
                        <input type="date" class="form-control" id="inputCardexpiry" placeholder="">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-9">
                        <label for="inputCardHolder">Card Holder Name</label>
                        <input type="text" class="form-control" id="inputCardholder" placeholder="">
                    </div>

                    <div class="form-group col-md-3">
                        <label for="inputCVC">CVC</label>
                        <input type="number" class="form-control" id="inputCVC" placeholder="">
                    </div>
                </div>

                <input type="submit" name="submit" value="PAY" id="submit2" class="btn btn-success">
            </form>
        </div>
        <div class="col-md-3">
            <div id="status" class="card">
                <div class="card-body">
                    <table class="able">
                        <thead class="thead-deault">
                        <tr>
                            <th><h1 class="font-weight-bold">SUMARY</h1></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">Wifi Plan</th>
                            <td>Nina</td>
                        </tr>
                        <tr>
                            <th scope="row">Pick-up Date</th>
                            <td>dd-mm-yyy</td>
                        </tr>
                        <tr>
                            <th scope="row">Total</th>
                            <td>0000$</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div id="Cardpay" class="card text-right">
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="list-inline">Mr. Nome Apelido</li>
                        <li class="list-inline">Morada</li>
                        <li class="list-inline">Cidade</li>
                        <li class="list-inline">Zip code</li>
                        <li class="list-inline">Cabo Verde</li>
                        <li class="list-inline">(000) 000 00 00</li>
                        <li class="list-inline">email@gmail.com</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


