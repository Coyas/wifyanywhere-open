    <div class="row">
        <div class="col-md-12">
            <article>
                <b>{{translation.C_Policy}}</b> {{translation.Refunds}}
            </article>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <article>
                <b>{{translation.Disclamer}}</b> {{translation.TheWifianywhere}}
            </article>
        </div>
