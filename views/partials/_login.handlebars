
<!-- Modal -->
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="container modal-content" id="menumodal">
            <nav>
                <div class="row nav nav-tabs bg-info" id="nav-tab" role="tablist">
                    <a class="col-6 nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Login</a>
                    <a class="col-6 nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Sign up</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <form action="/auth/login">
                        <div class="row text-center" id="redesocial">
                            <div class="col-6">
                                <a href="/auth/facebook" class="btn btn-primary"><i class="fab fa-facebook-square"></i>  Facebook</a>
                                </div>
                            <div class="col-6">
                                <a href="/auth/google" class="btn btn-danger"><i class="fab fa-google"></i>  Google</a>
                            </div>
                        </div>
                        <h2 id="separador"><span>{{translation.OR}}</span></h2>

                        <div class="container">
                            <label for="uname"><b>E-mail</b></label>
                            <input type="text" placeholder="Enter your Email" name="username" required>

                            <label for="psw"><b>Password</b></label>
                            <input type="password" placeholder="Enter Password" name="password" required>

                            {{!-- <button type="submit">Login</button> --}}
                            <div class="clearfix">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="button" class="signupbtn" id="cansel">Canselar</button>
                                </div>
                                <div class="col-md-6">
                                    <button type="submit" class="signupbtn">Entrar</button>
                                </div>
                            </div>
                        </div>
                            <label>
                                <input type="checkbox" checked="checked" name="remember"> Remember me
                            </label>
                            <label id="forgot">
                                 <a href="/resetSenha">Esqueceu a senha?</a>
                            </label>
                        </div>


                        
                    </form>
                </div>
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <form action="/auth/registro">
                        <div class="container">
                            <h1>Sign Up</h1>
                            <p>Please fill in this form to create an account.</p>
                            <hr>

                            <div class="form-row">
                                <div class="col">
                                    <label for="firstName"><b>Nome</b></label>
                                    <input type="text" class="form-control" placeholder="First name" name="firstName">
                                </div>
                                <div class="col">
                                    <label for="lastName"><b>Apelido</b></label>
                                    <input type="text" class="form-control" placeholder="Last name" name="lastName">
                                </div>
                            </div>

                            <label for="email"><b>Email</b></label>
                            <input type="text" placeholder="Enter Email" name="email" required>

                            <label for="psw"><b>Password</b></label>
                            <input type="password" placeholder="Enter Password" name="password" required>

                            <label for="psw-repeat"><b>Repeat Password</b></label>
                            <input type="password" placeholder="Repeat Password" name="repass" required>

                            {{!-- <label>
                                <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                            </label> --}}

                            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

                            <div class="clearfix">
                                <div class="row">
                                    <div class="col-md-6">
                                        <button type="button" class=" btn-danger cancel">cansel</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="signupbtn">Sign Up</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

