                               <li class="a">ENDEREÇO</li>
                               <li class="b">{{User.street_adress}}</li>
                               <li class="a">CIDADE</li>
                               <li class="b">{{User.city}}</li>
                               <li class="a">PAIS</li>
                               <li class="b">{{User.country}}</li>
                           </ul>
                       </div>
                       <div class="col-md-6">
                           <ul>
                               <li class="a">APELIDO</li>
                               <li class="b">{{User.lastName}}</li>
                               <li class="a">TELEFONE/MOVEL</li>
                               <li class="b">{{User.phone}}</li>
                               <li class="a">ENDEREÇO DE COBRANÇA</li>
                               <li class="b">{{User.biling_adress}}</li>
                               <li class="a">CODIGO ZIP</li>
                               <li class="b">{{User.zip_code}}</li>
                           </ul>
                       </div>
                   </div>
                </div>

            </div>

        </div>
    </div>
</section>

