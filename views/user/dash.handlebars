                                   {{else}}
                                        -- -- --
                                   {{/if}}
                               </li>
                               <li class="a">{{translation.country}}</li>
                               <li class="b">
                                   {{#if User.country}}
                                        {{User.country}}
                                   {{else}}
                                        -- -- --
                                   {{/if}}
                               </li>
                           </ul>
                       </div>
                       <div class="col-md-6">
                           <ul>
                               <li class="a">{{translation.lastName}}</li>
                               <li class="b">
                                   {{#if User.lastName}}
                                        {{User.lastName}}
                                   {{else}}
                                        -- -- --
                                   {{/if}}
                               </li>
                               <li class="a">{{translation.phone}}</li>
                               <li class="b">
                                   {{#if User.phone}}
                                        {{User.phone}}
                                   {{else}}
