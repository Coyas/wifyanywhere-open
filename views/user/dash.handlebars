                                   {{else}}
                                        -- -- --
                                   {{/if}}
                               </li>
                               <li class="a">{{translation.zip_code}}</li>
                               <li class="b">
                                   {{#if User.zip_code}}
                                        {{User.zip_code}}
                                   {{else}}
                                        -- -- --
                                   {{/if}}
                               </li>
                           </ul>
                       </div>
                   </div>
                </div>

            </div>

        </div>
    </div>
</section>

